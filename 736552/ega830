CREATE TABLE EGA.TBCMETIPOCARGO (
  CTCCODIGO smallint  not null ,
  CTCTIPOREGISTRO smallint  not null ,
  CTCDESCRICAO varchar(100)  not null ,
  CTCATIVO smallint DEFAULT 1 not null ,
  CONSTRAINT CHECK_CTCTIPOREGISTRO CHECK (CTCTIPOREGISTRO IN (2,1)),
  CONSTRAINT DOM15_CTCATIVO CHECK (CTCATIVO IN (0,1))
);
COMMENT ON TABLE EGA.TBCMETIPOCARGO IS 'Tipo de Cargo do Conselho Municipal de Educação';
COMMENT ON COLUMN EGA.TBCMETIPOCARGO.CTCCODIGO IS 'Código';
COMMENT ON COLUMN EGA.TBCMETIPOCARGO.CTCTIPOREGISTRO IS 'Tipo de Registro';
COMMENT ON COLUMN EGA.TBCMETIPOCARGO.CTCDESCRICAO IS 'Descrição';
COMMENT ON COLUMN EGA.TBCMETIPOCARGO.CTCATIVO IS 'Ativo?';

ALTER TABLE EGA.TBCMETIPOCARGO ADD CONSTRAINT  PK_TBCMETIPOCARGO PRIMARY KEY (CTCCODIGO,CTCTIPOREGISTRO) USING INDEX TABLESPACE INDICE;
CREATE UNIQUE INDEX idx_unique_tbcmetipocargo_ctcdescricao ON EGA.TBCMETIPOCARGO(MD5(LOWER(REPLACE(webbased.TO_ASCII_IPM(CTCDESCRICAO),' ',''))))
 TABLESPACE INDICE ;
