CREATE TABLE EGA.TBCMEREGIMENTOINTERNO (
  CMECODIGO smallint  not null ,
  CRISEQUENCIA smallint  not null ,
  CRIDESCRICAO varchar(100)  not null ,
  CRIDATA date ,
  CRITEXTO text ,
  CRIATIVO smallint DEFAULT 1 not null ,
  CONSTRAINT DOM15_CRIATIVO CHECK (CRIATIVO IN (0,1))
);
COMMENT ON TABLE EGA.TBCMEREGIMENTOINTERNO IS 'Regimento Interno do Conselho Municipal de Educação';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CMECODIGO IS 'Código';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CRISEQUENCIA IS 'Sequência';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CRIDESCRICAO IS 'Descrição';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CRIDATA IS 'Data';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CRITEXTO IS 'Texto';
COMMENT ON COLUMN EGA.TBCMEREGIMENTOINTERNO.CRIATIVO IS 'Ativo?';

ALTER TABLE EGA.TBCMEREGIMENTOINTERNO ADD CONSTRAINT  PK_TBCMEREGIMENTOINTERNO PRIMARY KEY (CRISEQUENCIA,CMECODIGO) USING INDEX TABLESPACE INDICE;

ALTER TABLE EGA.TBCMEREGIMENTOINTERNO ADD CONSTRAINT "FK CMEREGIMENTOINTERNO -> TBCONSELHOMUNICIPALEDU" FOREIGN KEY (CMECODIGO) REFERENCES EGA.TBCONSELHOMUNICIPALEDU (CMECODIGO) ;
